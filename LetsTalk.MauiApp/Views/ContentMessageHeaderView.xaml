<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:messaging="clr-namespace:LetsTalk.Messaging;assembly=LetsTalk.Shared"
    x:Class="LetsTalk.Views.ContentMessageHeaderView"
    x:DataType="messaging:ContentMessage">
    <Grid
        ColumnDefinitions="Auto,*"
        ColumnSpacing="5">
        <Label
            Grid.Column="0"
            FontSize="10"
            FontAttributes="Italic"
            Text="{Binding Sender.Name}" />
        <Label
            Grid.Column="1"
            HorizontalTextAlignment="End"
            FontSize="10"
            Text="{Binding Timestamp}" />
    </Grid>
</ContentView>
