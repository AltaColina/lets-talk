<?xml version="1.0" encoding="utf-8" ?>
<ContentView
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:messaging="clr-namespace:LetsTalk.Messaging;assembly=LetsTalk.Shared"
    x:Class="LetsTalk.App.Views.ContentMessagewView"
    x:DataType="messaging:ContentMessage">
    <Frame
        HorizontalOptions="Center"
        Margin="2"
        Padding="10">
        <Grid
            RowDefinitions="16,*">
            <Grid
                Grid.Row="0"
                ColumnDefinitions="Auto,*"
                ColumnSpacing="5">
                <Label
                    Grid.Column="0"
                    FontSize="10"
                    FontAttributes="Italic"
                    Text="{Binding Sender.Name}" />
                <Label
                    Grid.Column="1"
                    HorizontalTextAlignment="End"
                    FontSize="10"
                    Text="{Binding Timestamp}" />
            </Grid>
            <Label
                Grid.Row="1"
                VerticalTextAlignment="Center"
                Text="{Binding Content}" />
        </Grid>
    </Frame>
</ContentView>
